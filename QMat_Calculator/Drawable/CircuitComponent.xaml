<UserControl x:Class="QMat_Calculator.Drawable.CircuitComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QMat_Calculator.Drawable"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100" >

    <Border x:Name="component" Height="100" Width="100" Background="Transparent" PreviewMouseDown="component_PreviewMouseDown" ToolTip="{Binding getMatrix}">
        <!--<TextBlock x:Name="componentLabel"  Text="" FontSize="48" Margin="5"/>-->
        <Image x:Name="componentImage" Height="150" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Border>
</UserControl>
